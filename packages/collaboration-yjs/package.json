{
  "name": "@superdoc-dev/superdoc-yjs-collaboration",
  "version": "1.0.2",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "readme": "./README.md",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --outDir dist",
    "watch:lib": "tsup src/index.ts --format cjs,esm --dts --outDir dist --watch",
    "watch:example": "nodemon --watch examples/fastify --ext ts --exec \"cd examples/fastify && tsx index.ts\"",
    "dev": "concurrently -k -n LIB,SERVER -c yellow,green \"pnpm run watch:lib\" \"pnpm run watch:example\"",
    "test": "vitest --config ./vitest.config.ts",
    "test:cov": "vitest run --coverage --config ./vitest.config.ts",
    "typecheck": "tsc --noEmit --project tsconfig.vitest.json",
    "format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "check-format": "prettier --check \"src/**/*.{ts,tsx,md}\"",
    "lint": "eslint --no-warn-ignored src/**/*.ts",
    "lint:fix": "eslint --fix --no-warn-ignored src/**/*.ts"
  },
  "author": "SuperDoc",
  "license": "AGPL-3.0",
  "description": "A quick-start collaboration server for SuperDoc",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "lib0": "catalog:",
    "y-protocols": "catalog:",
    "yjs": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "concurrently": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "nodemon": "catalog:",
    "prettier": "^3.5.3",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
